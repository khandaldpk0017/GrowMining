mixin headerfile(pageTitle)

  head

    // Required meta tags
    meta(http-equiv='Content-Type' content='text/html; charset=UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    meta(name='description' content='Omee admin is super flexible, powerful, clean & modern responsive tailwind admin template with unlimited possibilities.')
    meta(name='keywords' content='admin template, Omee admin template, dashboard template, tailwind admin template, responsive admin template, web app')
    meta(name='author' content='codnictheme')


    title Omee - Admin Dashboard Html 5 Tailwind Responsive Template

    // Favicon icon
    link(rel='icon' href='../assets/images/logo/favicon.png' type='image/x-icon')
    link(rel='shortcut icon' href='../assets/images/logo/favicon.png' type='image/x-icon')   


    // Fonts css
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet")   


    // icon fonts
    link(href='../assets/css/vendor/font-awesome.css'  rel='stylesheet')
    link(href='../assets/css/vendor/themify-icons.css'  rel='stylesheet')   
    link(href='../assets/css/vendor/icoicon/icoicon.css'  rel='stylesheet')

    if morrischart
    // morris chart
    link(href='../assets/css/vendor/chart/morris.css'  rel='stylesheet')
    
    if slickslider
      // Slick slider
      link(href='../assets/css/vendor/slider/slick-slider/slick.css'  rel='stylesheet')  
      link(href='../assets/css/vendor/slider/slick-slider/slick-theme.css'  rel='stylesheet') 
   

    if ionRangeslider
      // ion range slider
      link(href='../assets/css/vendor/range-slider/ion-rangeslider.css'  rel='stylesheet')      

    if calendar
      // Calendar
      link(href='../assets/css/vendor/calendar/calendar.css'  rel='stylesheet')

    if Pe7_icon
      // Pe7 Icon
      link(href='../assets/css/vendor/pe7-icon/helper.css'  rel='stylesheet')
      link(href='../assets/css/vendor/pe7-icon/pe7-icon.css'  rel='stylesheet')
          

    if lightbox
      // lightbox
      link(href='../assets/css/vendor/light-box/fancybox.css'  rel='stylesheet')      

    if datepicker
      // datepicker
      link(href='../assets/css/vendor/datepicker/datepicker.css'  rel='stylesheet')

    if select2
      // select 2 css
      link(href='../assets/css/vendor/select2/select2.min.css'  rel='stylesheet')

    if sweetalert2
      // select 2 css
      link(href='../assets/css/vendor/sweetalert/sweetalert2.min.css'  rel='stylesheet') 

    if dataTable 
      //Datatable
      link(href="../assets/css/vendor/datatable/jquery.dataTables.css" rel="stylesheet")
      link(href="../assets/css/vendor/datatable/buttons.dataTables.css" rel="stylesheet")
      link(href="../assets/css/vendor/datatable/custom-datatable.css" rel="stylesheet") 

    // Scrollbar
    link(href='../assets/css/vendor/simplebar.css'  rel='stylesheet')   

    // Custom css
    link(href='../assets/css/style.css' id="customstyle"  rel='stylesheet')    

//- Mixin start
include ../mixin/mixin  

mixin header
  include header

mixin sidebar
  include sidebar

mixin footer
  include footer

mixin footerfile
  include footer-file