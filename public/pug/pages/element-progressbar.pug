doctype html
html(lang="en")
  include ../components/mixinfiles
  +headerfile("progress bar")
  body

    // Loader Start
    +loader
    // Loader End

    // Header Start
    +header
    // Header End

    .themebody-wrap

      // breadcrumb start
      +codexbreadcrumb('progress bar','element')
      // breadcrumb end

      // theme body start
      .theme-body
        .grid.grid-cols-12.page-gap.element-buttons         
          .col-span-12
            .card
              .card-header 
                h4 Normal Progress Bars
              .card-body
                .progress.progress-primary
                  .progress-bar(style="width:30%")
                .progress.progress-primary.mt-10                 
                  .progress-bar(style="width:40%")
                .progress.progress-primary.mt-10                 
                  .progress-bar(style="width:50%")
                .progress.progress-primary.mt-10                 
                  .progress-bar(style="width:70%")
          .col-span-12
            .card
              .card-header 
                h4 Different Theme Colors Progress Bars
              .card-body
                .progress.progress-primary
                  .progress-bar(style="width:5%")
                .progress.progress-secondary.mt-10                 
                  .progress-bar(style="width:20%")
                .progress.progress-success.mt-10                 
                  .progress-bar(style="width:30%")
                .progress.progress-info.mt-10                 
                  .progress-bar(style="width:40%")
                .progress.progress-success.mt-10                 
                  .progress-bar(style="width:50%")
                .progress.progress-warning.mt-10                 
                  .progress-bar(style="width:60%")
                .progress.progress-danger.mt-10                 
                  .progress-bar(style="width:70%")
          .col-span-12
            .card
              .card-header
                h4 Progress Bar Label
              .card-body
                .progress.progress-primary
                  .progress-bar(style="width:5%") 5%
                .progress.progress-secondary.mt-10
                  .progress-bar(style="width:20%") 20%
                .progress.progress-success.mt-10
                  .progress-bar(style="width:30%") 30%
                .progress.progress-info.mt-10                 
                  .progress-bar(style="width:40%") 40%
                .progress.progress-success.mt-10                 
                  .progress-bar(style="width:50%") 50%
                .progress.progress-warning.mt-10                 
                  .progress-bar(style="width:60%") 60%
                .progress.progress-danger.mt-10                 
                  .progress-bar(style="width:70%") 70%
          .col-span-12
            .card
              .card-header 
                h4 Progress Bar With Hight
              .card-body
                .progress.progress-primary(style="height:5px")
                  .progress-bar(style="width:5%")
                .progress.progress-secondary.mt-10(style="height:10px")
                  .progress-bar(style="width:20%")
                .progress.progress-success.mt-10(style="height:20px")                 
                  .progress-bar(style="width:30%")
          .col-span-12
            .card
              .card-header 
                h4 Multiple Bars Progress
              .card-body
                .progress
                  .progress-bar.bg-primary(style="width:5%")
                  .progress-bar.bg-secondary(style="width:20%")
                  .progress-bar.bg-success(style="width:35%")
                .progress.mt-10
                  .progress-bar.bg-info(style="width:20%")
                  .progress-bar.bg-warning(style="width:30%")
                  .progress-bar.bg-danger(style="width:40%")
      // theme body end
        
    // footer start 
    +footer
    // footer end

    // customzier start
    include ../components/customizer
    // customzier end

    +footerfile