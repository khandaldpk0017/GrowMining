doctype html
html(lang="en")
  include ../components/mixinfiles

  +headerfile("typography")
  body

    // Loader Start
    +loader
    // Loader End

    // Header Start
    +header
    // Header End


    .themebody-wrap

      // breadcrumb start
      +codexbreadcrumb('typography','element')
      // breadcrumb end

      // theme body start
      .theme-body
        .grid.grid-cols-12.page-gap 
          .col-span-12(class="xl:col-span-6")
            .card
              .card-header 
                h4 Headings
              .card-body.pt-20                        
                h1 H1 Theme Heading
                h2 H2 Theme Heading
                h3 H3 Theme Heading
                h4 H4 Theme Heading
                h5 H5 Theme Heading
                h6 H6 Theme Heading
          .col-span-12(class="xl:col-span-6")
            .card
              .card-header 
                h4 Heading with colors
              .card-body.pt-20                        
                h1.text-primary H1 Theme Heading
                h2.text-secondary H2 Theme Heading
                h3.text-success H3 Theme Heading
                h4.text-info H4 Theme Heading
                h5.text-warning H5 Theme Heading
                h6.text-danger H6 Theme Heading                    
          .col-span-12
            .card
              .card-header
                h4 Inline text elements
              .card-body
                  p
                    | You can use the mark tag to 
                    mark highlight
                    |  text.
                  p
                    del This line of text is meant to be treated as deleted text.
                  p
                    s This line of text is meant to be treated as no longer accurate.
                  p
                    ins This line of text is meant to be treated as an addition to the document.
                  p
                    u This line of text will render as underlined.
                  p
                    small This line of text is meant to be treated as fine print.
                  p
                    strong This line rendered as bold text.
                  p
                    em This line rendered as italicized text.           
      // theme body end
    
    // footer start 
    +footer
    // footer end

    // customzier start
    include ../components/customizer
    // customzier end


    +footerfile