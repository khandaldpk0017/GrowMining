-var apexchart = true ;
-var customapexchart = true ;
doctype html
html(lang="en")

  include ../components/mixinfiles

  +headerfile("apex chart")

  
  body

    +header

    .themebody-wrap

      // breadcrumb start
      +codexbreadcrumb('Apex Charts','element')
      // breadcrumb end

      // theme body start
      .theme-body       
          .grid.grid-cols-12.cdx-gap
            .col-span-12(class="2xl:col-span-4 md:col-span-6") 
              .card
                .card-header
                  h4 line chart
                .card-body
                  #apex-linechart
            .col-span-12(class="2xl:col-span-4 md:col-span-6") 
              .card
                .card-header
                  h4 area chart
                .card-body
                  #apex-areachart
            .col-span-12(class="2xl:col-span-4 md:col-span-6") 
              .card
                .card-header
                  h4 column chart
                .card-body
                  #apex-columnchart
            .col-span-12(class="2xl:col-span-4 md:col-span-6") 
              .card
                .card-header
                  h4 bar chart
                .card-body
                  #apex-barchart
            .col-span-12(class="2xl:col-span-4 md:col-span-6") 
              .card
                .card-header
                  h4 mix chart
                .card-body
                  #apex-mixchart
            .col-span-12(class="2xl:col-span-4 md:col-span-6") 
              .card
                .card-header
                  h4 timeline chart
                .card-body
                  #apex-timelinechart
            .col-span-12(class="2xl:col-span-4 md:col-span-6") 
              .card
                .card-header
                  h4 candel stick chart
                .card-body
                  #apex-candlechart
            .col-span-12(class="2xl:col-span-4 md:col-span-6") 
              .card
                .card-header
                  h4 radial chart
                .card-body
                  #apex-radialchart
            .col-span-12(class="2xl:col-span-4 md:col-span-6") 
              .card
                .card-header
                  h4 radar chart
                .card-body
                  #apex-radarchart
      // theme body end

    // footer start 
    +footer
    // footer end

    // customzier start
    include ../components/customizer
    // customzier end

    +footerfile