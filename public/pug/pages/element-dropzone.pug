-var dropzon = true;
doctype html
html(lang="en")
  include ../components/mixinfiles

  +headerfile("dropzone")
  body

    +header


    .themebody-wrap

      // breadcrumb start
      +codexbreadcrumb('cart','ecommerce')
      // breadcrumb end


      // theme body start
      .theme-body.cdxshopping-cart        
          .grid.grid-cols-12.cdx-gap
            .col-span-12
              .card
                .card-body                 
                  form#demo-upload.dropzone.needsclick(action='/upload')
                    .dz-message.needsclick
                      .upload-icon
                        i.fa.fa-cloud-upload
                      h3 Drop files here or click to upload.
                      p (This is just a demo dropzone. Selected files are
                        strong not
                          |  actually uploaded.)
                  .preview-dropzon(style='display: none;')
                    .dz-preview.dz-file-preview
                      .dz-image
                        img(data-dz-thumbnail='')
                      .dz-details
                        .dz-size
                          span(data-dz-size='')
                        .dz-filename
                          span(data-dz-name='')
                      .dz-progress
                        span.dz-upload(data-dz-uploadprogress='')                     
                      .dz-success-mark
                        i.fa.fa-check(aria-hidden='true')
      // theme body end

    // footer start
    +footer
    // footer end


    // customzier start
    include ../components/customizer
    // customzier end
  
    +footerfile  