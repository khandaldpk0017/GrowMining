-var comingsoon = true ;
doctype html
html(lang="en")
  include ../components/mixinfiles
  +headerfile("Coming soon")
  body

  
    // coming soon start
    section.coming-soon
      .container.relative
        .grid.grid-cols-12
          .col-span-12(class="col-start-auto md:col-span-8 md:col-start-3 lg:col-span-6 lg:col-start-4")
            .coming-detail.text-white.text-center
              h1 We're Coming Soon
              p
                | Our website is under construction. We'll be here soon with our new awesome site,
                | subscribe to be notified.
              .countdown-wrap
                .grid.grid-cols-12.cdx-gap
                  .col-span-6(class="sm:col-span-3")
                    .countdown-grid
                      h2.mb-0.day 180
                      h5.mb-0 Days
                  .col-span-6(class="sm:col-span-3")
                    .countdown-grid
                      h2.mb-0.hour 06
                      h5.mb-0 Hours
                  .col-span-6(class="sm:col-span-3")
                    .countdown-grid
                      h2.mb-0.minute 02
                      h5.mb-0 Minutes
                  .col-span-6(class="sm:col-span-3")
                    .countdown-grid
                      h2.mb-0.second 42
                      h5.mb-0 Seconds
              form.newsletter-form.position-relative
                .input-group
                  input.form-control(type='email' placeholder='Enter your email' name='email' required)
                  span.input-group-text 
                    button(type='submit') Subscribe
              ul.social-list
                li
                  a(href='Javascript:void(0)')
                    i.fa.fa-facebook-f
                li
                  a(href='Javascript:void(0)')
                    i.fa.fa-twitter
                li
                  a(href='Javascript:void(0)')
                    i.fa.fa-instagram
                li
                  a(href='Javascript:void(0)')
                    i.fa.fa-linkedin
    // coming soon end
      
    +footerfile