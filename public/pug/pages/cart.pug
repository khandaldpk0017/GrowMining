doctype html
html(lang="en")
  include ../components/mixinfiles
  +headerfile("Cart")
  body

    // Loader Start
    +loader
    // Loader End

    // Header Start
    +header
    // Header End


    .themebody-wrap

      // breadcrumb start
      +codexbreadcrumb('cart','ecommerce')
      // breadcrumb end


      // theme body start
      .theme-body.cdxshopping-cart
        .grid.grid-cols-12.page-gap
          .col-span-12
            .card
              .card-body
                .overflow-x-auto
                  table.table.cart-tbl
                    thead
                      tr
                        th.text-primary.fs-16 Product
                        th.text-primary.fs-16 Product name
                        th.text-primary.fs-16 Quantity
                        th.text-primary.fs-16 Price
                        th.text-primary.fs-16 Tax
                        th.text-primary.fs-16 Total
                        th.text-primary.fs-16 Action
                    tbody.cartBody
                      tr
                        td
                          .product-imgwrap
                            img.img-fluid.m-auto(src="../assets/images/pages/product/1.jpg" alt="")
                        td Cheks red Shirt
                        td
                          +qtycounter
                        td $241
                        td $2.4 
                        td $241   
                        td
                          .cart-action.flex.justify-center
                            a.text-success(href="javascript:void(0)") 
                              i(data-feather="heart")
                            a.delete.text-danger.ml-10(href="javascript:void(0)") 
                              i(data-feather="trash-2")
                      tr
                        td
                          .product-imgwrap
                            img.img-fluid.m-auto(src="../assets/images/pages/product/2.jpg" alt="")
                        td pink T-shirt
                        td
                          +qtycounter
                        td $241
                        td $2.4 
                        td $241   
                        td
                          .cart-action.flex.justify-center
                            a.text-success(href="javascript:void(0)") 
                              i(data-feather="heart")
                            a.delete.text-danger.ml-10(href="javascript:void(0)") 
                              i(data-feather="trash-2")
                      tr
                        td
                          .product-imgwrap
                            img.img-fluid.m-auto(src="../assets/images/pages/product/3.jpg" alt="")
                        td Sky blue shirt
                        td
                          +qtycounter
                        td $241
                        td $2.4 
                        td $241   
                        td
                          .cart-action.flex.justify-center
                            a.text-success(href="javascript:void(0)") 
                              i(data-feather="heart")
                            a.delete.text-danger.ml-10(href="javascript:void(0)") 
                              i(data-feather="trash-2")
                      tr
                        td
                          .product-imgwrap
                            img.img-fluid.m-auto(src="../assets/images/pages/product/4.jpg" alt="")
                        td rounded neck whtie T-shirt
                        td
