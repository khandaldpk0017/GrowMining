                        td $241   
                        td
                          .cart-action.flex.justify-center
                            a.text-success(href="javascript:void(0)") 
                              i(data-feather="heart")
                            a.delete.text-danger.ml-10(href="javascript:void(0)") 
                              i(data-feather="trash-2")
                .cartbtn-group
                  div
                    a.btn.btn-primary(href="product.html") Continue Shopping      
                  div
                    .group-btn
                      a.btn.btn-primary(href="javascript:void(0);") Update Cart 
                      a.btn.btn-danger.removeAll-cart(href="javascript:void(0);") Clear Shopping Cart
          .col-span-12
            .grid.grid-cols-12.d-flex.justify-end
              .col-span-12(class="2xl:col-span-4 lg:col-span-5 md:col-span-6")
                .card
                  .card-body
                    .table-responsive
                      table.table.chekout-tbl
                        tbody 
                          tr 
                            th Discounts
                            td £ 16.00
                          tr 
                            th Special Offer Saving
                            td £ 0.00
                          tr 
                            th Subtotal exc VAT
                            td £ 4.80
                          tr 
                            th VAT
                            td £ 482.00
                          tr 
                            th Grand Total inc VAT
                            td.text-success £ 470.80
                          tr 
                            td(colspan="2")
                              a.btn.btn-success(href="checkout.html") Proceed to checkout

      // theme body end

    // footer start
    +footer
    // footer end

    // customzier start
    include ../components/customizer
    // customzier end

    
